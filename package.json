{
  "name": "bun-project",
  "module": "server.ts",
  "type": "commonjs",
  "private": true,
  "sideEffects": false,
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "dev": "bun --watch server.ts",
    "dev-debug": "bun server.ts",
    "tsc": "tsc",
    "build": "bun build server.ts --outdir dist --minify --target bun",
    "build:node": "bun build server.ts --outdir dist --minify --target node",
    "bundle": "node bundle.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "start": "bun dist/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "@hono/node-server": "^1.19.4",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.3",
    "firebase": "^12.3.0",
    "hono": "^4.8.5",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2",
    "pino": "^9.7.0",
    "postgres": "^3.4.7",
    "socket.io": "^4.8.1"
  }
}
